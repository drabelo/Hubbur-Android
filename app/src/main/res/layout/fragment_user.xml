<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeActivity"
    android:nestedScrollingEnabled="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.nirhart.parallaxscroll.views.ParallaxScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:parallax_factor="1.9"
        tools:context=".MainActivity" >


            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/relly"
                    android:background="#ffffffff"
                    android:layout_marginTop="180dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="7 Events"
                        android:id="@+id/textView30"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="35dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Dailton Rabelo"
                        android:id="@+id/username"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginBottom="35dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log Out"
                        android:id="@+id/log_out"
                        android:layout_alignTop="@+id/username"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:nestedScrollingEnabled="false"
                        android:onClick="onLogOut" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Prof pic"
                        android:id="@+id/button6"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:nestedScrollingEnabled="false"
                        android:onClick="onChangeProfPic"
                        android:layout_below="@+id/log_out" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/dateEvent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="#ff32322e"
                    android:focusable="false"
                    android:layout_below="@+id/relly"
                    android:background="#ffffffff"
                    android:paddingBottom="10dp">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Memories"
                        android:id="@+id/textView25"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:clickable="false"
                        android:enabled="true"
                        android:fontFamily="sans-serif-thin"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/textView30"
                        android:layout_toEndOf="@+id/textView30"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:autoText="false"
                        android:textIsSelectable="true" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/divide2r"
                        android:background="@android:color/darker_gray"
                        android:layout_alignParentStart="false"
                        android:paddingBottom="10dp"
                        />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="My Hubs"
                        android:id="@+id/textView24"
                        android:singleLine="true"
                        android:fontFamily="sans-serif-thin"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:clickable="true"
                        android:enabled="true"
                        android:onClick="onHubClick"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/textView30"
                        android:layout_toEndOf="@+id/textView30"
                        android:layout_weight="1"
                        android:background="#ffffffff"
                        android:editable="false" />




                </LinearLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/profile_image"
                    app:border_width="2dp"

                    app:border_color="#FF000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp" />

            </RelativeLayout>
    </com.nirhart.parallaxscroll.views.ParallaxScrollView>



    </LinearLayout>



